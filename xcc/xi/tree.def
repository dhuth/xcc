tree_type(xi_const_type,                        ast_type)           // constant type cannot be assigned to  [?  parse   to type-check               check       to ast_type...]
tree_type(xi_infered_type,                      ast_type)           // 'auto' type                          [+  parse   to type-infer               infer       to ast_type...]
tree_type(xi_array_type,                        ast_type)           // special multidimensional array       [+  parse   to lower                    lower       to ast_type...]
tree_type(xi_ref_type,                          ast_type)           // hides pointer                        [?  parse   to lower                    lower       to ast_pointer_type]
tree_type(xi_object_type,                       ast_type)           // general type (wraps xi_type_decl)    [+  parse   to lower                    lower       to ast_type...]

tree_type(xi_name_decl,                         ast_decl)           // not-yet declared name                [?  parse   to resolve                  resolve     to ast_decl...]
tree_type(xi_parameter_decl,                    ast_decl)           // ....                                 [+  parse   to lower                    lower       to ast_parameter_decl]
tree_type(xi_function_decl,                     ast_decl)           // a non-member function                [+  parse   to lower                    lower       to ast_function_decl]
tree_type(xi_member_decl,                       ast_decl)           // a member                             [   parse   to lower]
tree_type(xi_field_decl,                        xi_member_decl)     // a field member                       [+  parse   to lower                    lower       to ast_field_decl]
tree_type(xi_method_decl,                       xi_member_decl)     // a member function                    [+  parse   to flatten                  flatten     to xi_function_decl]
tree_type(xi_constructor_decl,                  xi_method_decl)     // a constructor (method)               [+  parse   to flatten                  flatten     to xi_function_decl]
tree_type(xi_destructor_decl,                   xi_method_decl)     // a destructor (method)                [+  parse   to flatten                  flatten     to xi_function_decl]
tree_type(xi_type_decl,                         xi_member_decl)     // a type                               [   parse   to lower]
tree_type(xi_struct_decl,                       xi_type_decl)       // a pod type                           [+  parse   to lower                    lower       to ast_decl...]
tree_type(xi_class_decl,                        xi_struct_decl)     // an object type                       [+  parse   to lower                    lower       to ast_decl...]
tree_type(xi_mixin_decl,                        xi_type_decl)       // a mixin (interface) type             [+  parse   to lower                    lower       to ast_decl...]

tree_type(xi_op_expr,                           ast_expr)           // an operator expression               [+  parse   to type-check               check       to ast_expr...]
tree_type(xi_index_expr,                        ast_expr)           // an index expression                  [+  parse   to type-check               check       to ast_expr...]
tree_type(xi_named_memberref_expr,              ast_expr)           // a member of expr                     [+  parse   to type-infer               infer       to ...]
tree_type(xi_static_named_memberref_expr,       ast_expr)           // a static member of type              [+  parse   to lower                    lower       to ast_declref]
//tree_type(xi_name_expr,                         ast_expr)           // an unidentified name expr            [?  parse   to type-infer               infer       to ast_declref]
tree_type(xi_zero_initializer_expr,             ast_expr)           // a zero initializer                   [+  parse   to lower                    lower       to ast_expr...]
tree_type(xi_function_group_expr,               ast_expr)           // functions with the same name         [+  check   to check                    check       to ast_declref]

tree_type(xi_assign_stmt,                       ast_stmt)           // hides ast_assign                     [+  parse   to type-check               check       to ast_assign_stmt]
tree_type(xi_foriter_stmt,                      ast_stmt)           // for stmts                            [+  parse   to ?                        ?           to ast_stmt...]
