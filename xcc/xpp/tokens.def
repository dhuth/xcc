m4_define(`hash', ``\\#'')

token(ws,                           "\\s+")
token(newline,                      "\\n")
token(continue_line,                "\\\\n")
token(directive_include,            "^hash\\s*include\\s+")
token(directive_define,             "^hash\\s*define\\s+")
token(directive_undef,              "^hash\\s*undef\\s+")
token(directive_pushdef,            "^hash\\s*pushdef\\s+")
token(directive_popdef,             "^hash\\s*popdef\\s+")
token(directive_if,                 "^hash\\s*if\\s+")
token(directive_ifdef,              "^hash\\s*ifdef\\s+")
token(directive_endif,              "^hash\\s*endif\\s+")
token(comma,                        `","')
token(lparen,                       "\\(")
token(rparen,                       "\\)")
token(identifier,                   "[a-zA-Z_][a-zA-Z_0-9]*")
